{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna run -- build",
    "clean": "lerna run -- clean",
    "test": "lerna run -- test",
    "lint": "lerna run -- lint",
    "watch": "lerna run --parallel -- watch",
    "predeploy": "yarn build && yarn test",
    "deploy": "lerna publish --independent"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^11.11.3",
    "@types/jest": "^24.0.6",
    "jest": "^24.1.0",
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "lint-staged": "^4.1.3",
    "prettier": "^1.6.1",
    "ts-jest": "^24.0.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix -c tslint.json",
      "git add"
    ],
    "*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "parser": "babylon"
  }
}
